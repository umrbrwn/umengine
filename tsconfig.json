{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declaration": true,
    "lib": ["ES2017", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "stripInternal": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/", "dist/"],
}
